// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Accounts {
  id  String @id @default(uuid())
  email  String @unique
  password String
  role Role
  isActive Boolean
  user   User?  
}
model User{
  id String @id @default(uuid())
  accountId String @unique @db.VarChar(100)
  name String @db.VarChar(100)
  phone String @db.VarChar(100)
  skinType String @db.VarChar(100)
  account  Accounts @relation(fields: [accountId], references: [id])
  addresses Address[]
  
}
model Address{
  id String @id @default(uuid())
  userId String 
  receiver String
  label String
  isDefault  Boolean
  cityId String
  postalCode String @db.VarChar(100)
  addressDetail String @db.VarChar(200)
  user User @relation(fields: [userId],references: [id])
}


enum Role{
  CUSTOMER
  ADMIN
}

model categories{
  id String @id @default(uuid())
  name String @db.VarChar(100)
  sub_category sub_category[]
}

model sub_category{
  id String @id @default(uuid())
  categoryId String
  category categories @relation(fields: [categoryId],references: [id])
  name String
  sub_child sub_child[]
}
model sub_child{
  id String @id @default(uuid())
  subCategoryId String
  sub_category sub_category @relation(fields: [subCategoryId],references:[id])
  name String

}
